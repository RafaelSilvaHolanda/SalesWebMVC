@model IEnumerable<SalesWebMVC.Models.Seller>

@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">

    <thead>
        <tr class="bg-success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departament)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Seller seller in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelSeller => seller.Name)
            </td>
            <td>
                @Html.DisplayFor(modelSeller => seller.Email)
            </td>
            <td>
                @Html.DisplayFor(modelSeller => seller.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelSeller => seller.Departament)
            </td>
            <td>
                @Html.DisplayFor(modelSeller => seller.Salary)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@seller.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@seller.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@seller.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
